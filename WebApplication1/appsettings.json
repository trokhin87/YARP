{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "friend-api": {
        "ClusterId": "friend-cluster",
        "Match": {
          "Path": "/api/{**catch-all}" 
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/friends" }
        ]
      },
      "friend-swagger": {
        "ClusterId": "friend-cluster",
        "Match": {
          "Path": "/swagger/{**catch-all}" 
        }
      },
      "friend-swagger-json": {
        "ClusterId": "friend-cluster",
        "Match": {
          "Path": "/swagger/v1/swagger.json" 
        }
      }
    },
    "Clusters": {
      "friend-cluster": {
        "Destinations": {
          "friend-service": {
            "Address": "http://localhost:5015/"
          }
        }
      }
    }
  }
}