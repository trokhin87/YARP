{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "friend-api": {
        "ClusterId": "friend-cluster",
        "Match": {
          "Path": "/api/friend/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/friend/friends" }
        ]
      },
      "friend-swagger": {
        "ClusterId": "friend-cluster",
        "Match": {
          "Path": "/friend/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/friend"
          }
        ]
      },
      "friend-swagger-json": {
        "ClusterId": "friend-cluster",
        "Match": {
          "Path": "/friend/swagger/v1/swagger.json"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/friend"
          }
        ]
      },
      "auth-api": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/auth/Auth" }
        ]
      },
      "auth-swagger": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ]
      },
      "auth-swagger-json": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/swagger/v1/swagger.json"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ]
      },
      "mail-api": {
        "ClusterId": "mail-cluster",
        "Match": {
          "Path": "/api/mail/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/mail/Mail" }
        ]
      },
      "mail-swagger": {
        "ClusterId": "mail-cluster",
        "Match": {
          "Path": "/mail/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/mail"
          }
        ]
      },
      "mail-swagger-json": {
        "ClusterId": "mail-cluster",
        "Match": {
          "Path": "/mail/swagger/v1/swagger.json"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/mail"
          }
        ]
      }
    },
    "Clusters": {
      "friend-cluster": {
        "Destinations": {
          "friend-service": {
            "Address": "http://localhost:5015/"
          }
        }
      },
      "auth-cluster": {
        "Destinations": {
          "friend-service": {
            "Address": "http://localhost:5082/"
          }
        }
      },
      "mail-cluster": {
        "Destinations": {
          "friend-service": {
            "Address": "http://localhost:5072/"
          }
        }
      }
    }
  }
}
